<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/card_background"
    android:orientation="horizontal"
    android:weightSum="3">

    <ImageView
        android:id="@+id/sandwich_picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:src="@mipmap/ic_launcher" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/extra_batch_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@mipmap/extra_batch_60" />

        <LinearLayout
            android:id="@+id/card_top_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@color/card_details_background"
            android:orientation="horizontal"
            android:layout_margin="1dp"
            android:weightSum="3">

            <TextView
                android:id="@+id/sandwich_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="X-Egg Bacon"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sandwich_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:layout_margin="1dp"
                android:text="R$ 25,00"
                android:textStyle="bold|italic" />
        </LinearLayout>

        <TextView
            android:id="@+id/sandwich_ingredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_top_panel"
            android:background="@color/card_details_background"
            android:padding="1dp"
            android:text="Pão com gergelim, alface, ovo, bacon, hambúrguer de carne e queijo" />

    </RelativeLayout>


</LinearLayout>