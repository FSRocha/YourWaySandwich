<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fastfood.yourwaysandwich.view.CartActivity">

    <TextView
        android:id="@+id/cart_title_txt"
        style="@android:style/TextAppearance.Material.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:padding="10dp"
        android:text="@string/car_title" />

    <ListView
        android:id="@+id/sandwich_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/total_price_panel"
        android:layout_below="@id/cart_title_txt" />

    <LinearLayout
        android:id="@id/total_price_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/total_txt"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/total_price_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:textSize="40sp"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>
